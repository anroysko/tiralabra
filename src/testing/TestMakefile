CPPFLAGS = -g -std=c++11

all : run

test : test.o splay_tree.o splay_node.o
	g++ -o test test.o splay_tree.o splay_node.o $(CPPFLAGS)
test.o : test.cpp ./../splaytree/splay_tree.h ./../splaytree/splay_node.h
	g++ -c test.cpp $(CPPFLAGS)
splay_tree.o : ./../splaytree/splay_tree.cpp ./../splaytree/splay_tree.h ./../splaytree/splay_node.h
	g++ -c -o splay_tree.o ./../splaytree/splay_tree.cpp $(CPPFLAGS)
splay_node.o : ./../splaytree/splay_node.cpp ./../splaytree/splay_node.h
	g++ -c -o splay_node.o ./../splaytree/splay_node.cpp $(CPPFLAGS)

.PHONY : clean
clean :
	rm test test.o splay_tree.o splay_node.o

.PHONY : run
run : test
	./test
